<p style="color: green"><%= notice %></p>

<h1>Clients</h1>

<%= link_to "New client", new_client_path, class:"btn btn-primary" %>

<div id="clients" class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>email</th>
        <th>Movies</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>      
      <% @clients.each do |client| %>      
        <%= render partial:'client_row', locals:{ client: client} %>
      <% end %>
    </tbody>
  </table>
</div>  